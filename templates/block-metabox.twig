<input type="hidden" name="_wpb_blocks_changed" value="false">

<ul class="blocks">
	{% for page_block in page_blocks %}
		{% if page_block.into_id == "0" or page_block.into_id == "-1" %}
			{{ wpb_render_block_preview(page_block.buid, page_block.post_id, page_block.page_id) }}
		{% endif %}
	{% endfor %}
</ul>

<div id="wpb-primary-add-block" class="button block-metabox-modal-show">Add block</div>


<div id="wpb-copy" class="block-metabox-modal">
	<div class="block-metabox-modal-frame">
		<div class="block-metabox-modal-header">
			<h1>Copy Block</h1>
			<button type="button" class="button-link media-modal-close block-metabox-modal-hide"><span class="media-modal-icon"><span class="screen-reader-text">Close</span></span></button>
		</div>
	</div>
	<div class="block-metabox-modal-content">
		{{ pages }}
	</div>
</div>

<div id="wpb-move" class="block-metabox-modal">
	<div class="block-metabox-modal-frame">
		<div class="block-metabox-modal-header">
			<h1>Move Block</h1>
			<button type="button" class="button-link media-modal-close block-metabox-modal-hide"><span class="media-modal-icon"><span class="screen-reader-text">Close</span></span></button>
		</div>
	</div>
	<div class="block-metabox-modal-content">
		{{ pages }}
	</div>
</div>

<div id="wpb-pick" class="block-metabox-modal">
	<div class="block-metabox-modal-frame">
		<div class="block-metabox-modal-header">
			<h1>Insert Block</h1>
			<button type="button" class="button-link media-modal-close block-metabox-modal-hide"><span class="media-modal-icon"><span class="screen-reader-text">Close</span></span></button>
		</div>
		<div class="block-metabox-modal-content">
			<div class="block-template-info-list">
				{% for category_name, block_template_infos in categories %}
					<div class="block-template-info-category clearfix">
						<div class="block-template-info-category-name">{{category_name}}</div>
						{% for block_template_info in block_template_infos %}
							<div class="block-template-info-cell">
								<div class="block-template-info" data-buid="{{block_template_info.buid}}">
									<div class="block-template-info-header">
										<div class="block-template-info-name">{{block_template_info.name}}</div>
										<div class="block-template-info-desc">{{block_template_info.description}}</div>
									</div>
									<div class="block-template-info-layout">
										<div class="block-template-info-layout-frame">
											{{ function('wpb_render_block_outline', block_template_info.buid) }}
										</div>
									</div>
									<div class="block-template-info-action">
										<div class="button button-primary button-insert">Insert</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

<div class="block-edit-modal">
	<div class="block-edit-modal-frame">
		<div class="block-edit-modal-header">
			<h1>Edit Block</h1>
			<button type="button" class="button-link media-modal-close block-edit-modal-hide"><span class="media-modal-icon"><span class="screen-reader-text">Close media panel</span></span></button>
		</div>
		<div class="block-edit-modal-content">
			<iframe width="100%" height="100%" allowtransparency="true"></iframe>
		</div>
	</div>
</div>